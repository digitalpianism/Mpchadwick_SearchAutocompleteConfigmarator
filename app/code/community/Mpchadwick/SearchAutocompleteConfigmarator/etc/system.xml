<?xml version="1.0"?>
<config>
    <sections>
        <catalog>
            <groups>
                <search>
                    <fields>
                        <disable_autocomplete>
                            <label>Disable Autocomplete</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </disable_autocomplete>
                        <autocomplete_limit>
                            <label>Autocomplete Result Limit</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-not-negative-number</validate>
                            <comment>Enter a positive number to apply a limit to the number of results that will be displayed. If the value here is 0, or the field is left empty, no limit will be applied</comment>
                            <sort_order>210</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </autocomplete_limit>
                        <hide_result_count>
                            <label>Hide Autocomplete Result Count</label>
                            <frontend_type>select</frontend_type>
                             <comment>Prevents number of results from showing in result list</comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>220</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </hide_result_count>
                        <like_match_position>
                            <label>Autocomplete Like Match Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mpchadwick_searchautocompleteconfigmarator/system_config_source_likematchposition</source_model>
                            <comment>The type of SQL LIKE query to use. "Start" finds search terms that start with the input. "Any" find search terms where the input is present anywhere</comment>
                            <sort_order>230</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </like_match_position>
                    </fields>
                </search>
            </groups>
        </catalog>
    </sections>
</config>
